<script type="text/javascript">
	$(function () {
		$('#slides').slides({
			preload: true,
			play: 5000,
			pause: 2500,
			hoverPause: true,
			animationComplete: function (current) {
				$('.caption').animate({ bottom: 0 }, 200);
			},
			slidesLoaded: function () {
				$('.caption').animate({ bottom: 0 }, 200);
			}
		});
	});
</script>
