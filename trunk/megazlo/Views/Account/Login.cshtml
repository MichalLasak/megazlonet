@model megazlo.Models.LoginUser
@using megazlo.Code
@Html.PageInfo(new { title = "Вход", value = Request.RawUrl })
@using (Html.BeginForm()) {
	<div style="float: left;">
		<div class="editor-label">
			@Html.LabelFor(model => model.Login)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.Login)
			@Html.ValidationMessageFor(model => model.Login)
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.Password)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.Password)
			@Html.ValidationMessageFor(model => model.Password)
		</div>
		<br />
		<div class="editor-field">
			@Html.EditorFor(model => model.IsRemember)
			@Html.LabelFor(model => model.IsRemember)
		</div>
		<input id="login_href" type="hidden" value="@Url.Action("LoginAjax", "Account")" />
	</div>
	<div style="float: left; margin-left: 100px; margin-top: 10px;">
		@Html.ActionLink("Забыли пароль?", "RestorePassword")
		<br />
		@Html.ActionLink("Регистрация", "Regisrer")
	</div>
}
@Html.ValidationSummary(true)
