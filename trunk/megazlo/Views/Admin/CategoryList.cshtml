@model IEnumerable<megazlo.Models.Category>
<fieldset class="for_forms">
	<legend>Спиосок категорий</legend>
	<table>
		@foreach (var item in Model) {
			<tr>
				<td style="text-align: left;">
					@Html.ActionLink(item.Title, "Category", "Home", new { id = item.Title }, null)
				</td>
				<td>
					@Html.ActionLink("Edit", "EditCategory", new { id = item.Id }) |
					@Html.ActionLink("Delete", "DeleteCat", new { id = item.Id })
				</td>
			</tr>
	}
	</table>
	<p>
		@Html.ActionLink("Создать категорию", "AddCategory")
	</p>
</fieldset>
