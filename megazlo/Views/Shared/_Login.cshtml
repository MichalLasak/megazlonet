@if (Request.IsAuthenticated) {
	<h2 class="widget-title">
		Привет, <b>@User.Identity.Name</b>! [@Html.ActionLink("Выход", "LogOff", "Account")]</h2>
	<br />
	<img alt="" src="@Url.Content("~/Upload/Avatars/" + User.Identity.Name + ".jpg")" />						
} else {
	<script src="@Url.Content("~/Scripts/Ajax/Login.js")" type="text/javascript"></script>
	<h2 class="widget-title">
		Попробовать [@Html.ActionLink("войти", "GetLoginForm", "Account", null, new { id = "login_link" })]?</h2>
	<div id="login_dial" title="Вход" style="display: none; padding: 20px;">
	</div>
}